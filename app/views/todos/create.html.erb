<h1>Crea una tarea</h1>
<%= form_with(model: @task, local: true) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>
    </div>
    <div>
        <%= form.submit "Crear" %>
    </div>
<% end %>
